                FROM MEMBER
               WHERE no = 21));

  SELECT NO,
         TITLE,
         REG_DATE,
         HIT_COUNT,
         USER_NAME
    FROM BOARD_COMMNITY
ORDER BY no DESC;

CREATE TABLE reply (
	NO NUMBER(7), 
	board_NO NUMBER(7), 
	user_NO NUMBER(7), 
	content varchar2(2000), 
	reg_date date, 
	group_NO NUMBER(7), 
	order_NO NUMBER(7), 
	depth NUMBER(2),
	PRIMARY KEY(NO)
);
drop table reply;
CREATE SEQUENCE seq_reply START WITH 1 INCREMENT BY 1;
SELECT *
  FROM REPLY r;

SELECT * FROM BOARD_COMMNITY;

INSERT INTO REPLY (NO,
                   BOARD_NO,
                   USER_NO,
                   CONTENT,
                   REG_DATE,
                   GROUP_NO,
                   ORDER_NO,
                   DEPTH)
     VALUES (SEQ_REPLY.NEXTVAL,
             31,
             21,
             '후기 잘 봤습니다!!',
             SYSDATE,
             (SELECT MAX (group_no + 1)
                FROM reply),
             0,
             0);

  SELECT NO,
         BOARD_NO,
         USER_NO,
         CONTENT,
         TO_CHAR (REG_DATE, 'YY-MM-DD HH24:MI') AS REG_DATE,
         GROUP_NO,
         ORDER_NO,
         DEPTH
    FROM REPLY
ORDER BY group_no ASC, order_no ASC;

